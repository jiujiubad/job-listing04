  <!-- Default panel contents -->

  <!-- Table -->
<ul class="nav nav-tabs" role="tablist" id="myTab">
  <li role="presentation" class="active"><a href="<% link_to(jobs_path) %>" role="tab" data-toggle="tab">Home</a></li>
  <li role="presentation"><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
  <li role="presentation"><%= link_to("按照发表下限排序", jobs_path(:order => "by_lower_bound")) %></li>
</ul>
<script>
  $(function () {
    $('#myTab a:last').tab('show')
  })
</script>

  <table class="table table-boldered table-striped custab">
    <thead>
      <tr>
        <td>#</td>
        <td>职位招募</td>
        <td>企业名称</td>
        <td>城市</td>
        <td>薪资范围</td>
        <td>发布时间</td>
      </tr>
    </thead>

  <tbody>
  <% @jobs.each_with_index do |job, index| %>
   <tr>
    <td><%= index +1%></td>
    <td><span><i class="fa fa-paw" aria-hidden="true"></i> <%= link_to(job.title, job_path(job)) %></td>
    <td>  <span><i class="fa fa-handshake-o" aria-hidden="true"></i> <%= job.company_name %></td>
    <td>  <span><i class="fa fa-paper-plane-o" aria-hidden="true"></i> <%= job.place %></td>
    <td width="15%">
     <span class="badge badge-info">
      <span class="fa fa-rmb"></span><%= job.wage_lower_bound %> - <%= job.wage_upper_bound %> 元
     </span>
    </td>
    <td width="15%">
     <span><i class="fa fa-clock-o" aria-hidden="true"></i> <%= time_ago_in_words(job.created_at) %> 前
  </td>
</tr>

  <% end %>
</tbody>
