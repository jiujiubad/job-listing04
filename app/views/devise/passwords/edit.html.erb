<html>
<head>
<style>
 body{
 background-image: url("https://ww1.sinaimg.cn/large/006y8lVagy1fby3ngn833j318g0togn3.jpg");
 background-repeat: no-repeat;
 background-position: left top;
    background-attachment: fixed;
 }
 </style>
 </head>
 <body>
 <div class="container-fluid">
 <div class="col-md-4 col-md-offset-4 changepassword-page" >
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</body>
</html>
