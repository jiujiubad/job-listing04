<br>
<div class="pull-right">
  <%= link_to("Add a Job", new_admin_job_path, :class => "btn btn-default") %>
</div>
<br><br>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">职位空缺</div>

  <!-- Table -->
 <table class="table table-boldered table-striped custab">
  <thead>
    <tr>
      <td>#</td>
      <td>招聘</td>
      <td>公司名称</td>
      <td>城市</td>
      <td>收到简历</td>
      <td>薪资范围</td>
      <td>管理选项</td>
      <td>刊登时间</td>
    </tr>
  </thead>

  <% @jobs.each_with_index do |job,index| %>
    <tr>
      <td><%= index +1 %></td>
      <td>
        <%= render_job_status(job) %>
        <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td><%= job.company_name %></td>
      <td><%= job.place %></td>
      <td><%= link_to(job.resumes.count, admin_job_resumes_path(job))  %></td>
      <td><span class="badge badge-info">
             <span class="fa fa-rmb"></span><%= job.wage_lower_bound %> - <%= job.wage_upper_bound %> 元
          </span>
      </td>
      <td>
        <%= link_to(edit_admin_job_path(job),  class: "btn btn-xs btn-info") do %><i class="fa fa-pencil"></i><% end %> |

        <%= link_to(admin_job_path(job), :method => :delete,class: "btn btn-xs btn-danger",:data => {:confirm => "Are you sure?"})  do %><i class="fa fa-trash-o"></i><% end %> |
         <% if job.is_hidden %>
           <%= link_to(publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-success") do %><i class="fa fa-eye"></i><% end %>
         <% else %>
           <%= link_to(hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default") do %><i class="fa fa-eye-slash"></i><% end %>
         <% end %>
       </td>
       <td>
         <%= job.created_at %>
       </td>

    </tr>
   <% end %>
  </table>
</div>
