<h1>Add a Job</h1>

<%= simple_form_for [:admin, @job] do |f| %>

<%= f.input :title, :label => "职位" %>
<%= f.input :company_name, :label => "企业名称" %>
<%= f.input :place, :label => "城市" %>
<%= f.input :description, :lable => "职位描述" %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

<%= f.submit "Submit" %>

<% end %>
